<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;700&display=swap"
         rel="stylesheet">

        <link rel="stylesheet" href="/stylesheets/index.css">
        <link rel="stylesheet" href="/stylesheets/user.css">

		<link rel="shortcut icon" href="/imgs/favicon.png">
        <title>AllBooks - User Account</title>
    </head>
    <body>
        <header>
            <div class="logo-cont">
                <img src="/imgs/open-book.png" alt="logo" onclick="window.location = '/'">
                <h4 class="logo" onclick="window.location = '/'">AllBooks</h4>
            </div>
            <nav>
                <ul class="nav-links">
					<% if(!currentUser){ %>
						<li><a class="nav-link" href="/login">Login</a></li>
						<li><a class="nav-link" href="/signup">Sign Up</a></li>
					<% } else { %>
                    	<li><a class="nav-link" href="/logout">Log Out</a></li>
						<li style="cursor: pointer">
							<img src="/imgs/userlogo.png" alt="logo" 
								 onclick="window.location = '/user'"
								 class="user-logo">
							<a class="nav-link" href="/user"><%= currentUser.name %></a>
						</li>
					<% } %>
                </ul>
            </nav>
        </header>
		
		<main>
			<div class="heading">
				<h1>Hello <%= currentUser.name %>!</h1>
			</div>
			<h3 class="heading">Welcome to your personalised account</h3>
			
			<section class="cart">
				<% if(cart.length !== 0){ %>
				<h3 class="cart__header">Your cart contains...</h3>
				<a class="explore-btn" href="/search">Add More</a>
				<div class="row">
					<% cart.forEach((b) => { %>
					<div class="book">
						<img src="/imgs/book-image.jpg" class="book__image">
						<h4 class="book__name"><%= b.title %></h4>
						<form action="/user/<%= b._id %>?_method=DELETE" 
							  method="POST" 
							  class="add__form"
							  target="hidden">
							<input class="add__btn" type="submit" value="&#8377; <%= b.price %>">
						</form>
						<iframe style="display: none" name="hidden"></iframe>
					</div>
					<% }) %>
				</div>
				<% } else { %>
				<h3 class="cart__header empty">Your cart is empty!</h3>
				<a class="explore-btn" href="/search">Explore</a>
				<% } %>
			</section>
		</main>
			
		<!-- <footer>
			<ul class="footer__links">
				<li class="footer__link"><a href="#">About Us</a></li>
				<li class="footer__link"><a href="#">Contacts</a></li>
			</ul>
		</footer> -->
		<script>
			let cartBooks = document.querySelectorAll(".book").length;
			let remBtns = document.querySelectorAll(".add__btn");
			let header = document.querySelector(".cart__header");
			let expBtn = document.querySelector(".explore-btn");
			remBtns.forEach((r) => {
				r.addEventListener('click', () => {
					let book = r.parentElement.parentElement;
					book.style.display = 'none';
					cartBooks = cartBooks - 1;
					if(cartBooks == 0){
						header.textContent = 'Your cart is empty!';
						expBtn.textContent = 'Explore';
						header.style.paddingBottom = '1%';
					}
				});
			});
		</script>
    </body>
</html>